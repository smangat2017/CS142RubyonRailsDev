<% if flash[:notice] %>
	<div class = "error_message">
		<%= flash[:notice] %>
	</div>
<% end %>

<%= form_tag("post_login", :method => "post") do %>
	<%= label_tag(:text_val, "Login:") %>
	<%= text_field_tag(:login) %>
	<br></br>
	<%= label_tag(:text_val, "Password:") %>
	<%= password_field_tag(:password) %>
	<br></br>
 	<%= submit_tag("Submit") %>
<% end %>